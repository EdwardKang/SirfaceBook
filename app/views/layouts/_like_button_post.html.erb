<li class="like-post-list like-button-posts">
  <% like = post.likes.where(user_id: current_user.id) %>
  <% if like.empty? %>
    <%= render "layouts/like_post", post: post, likeable_type: post.class.name %>
  <% else %>
    <%= button_to "Unlike", like_url(like[0]), method: :delete, :remote => true, :form_class => "delete-like-button" %>
  <% end %>
</li>

<li class="like-button-posts">
  <% if post.likes.count > 0 %>
		<span>
      <%= pluralize(post.likes.count, "Like") %>
		</span>
  <% end %>
</li>