<form action="<%= url %>" method="post" data-remote="true" class="accept-friend-form">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="put">

  <input type="hidden" name="friendship[friendee_id]" value="<%= current_user.id %>">
  <input type="hidden" name="friendship[friender_id]" value="<%= user.id %>">
  <input type="submit" value="Confirm Friend Request">
</form>