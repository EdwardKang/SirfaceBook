<h1>Pending Friend Requests</h1>

<section class="friend-request">
	<article>
		<ul>
			<% current_user.pending_received_friends.each do |friend| %>
			<li>
				<% received_friendship = Friendship.where(friender_id: current_user.id, friendee_id: friend.id) %>
				<%= link_to "#{friend.first_name} #{friend.last_name}",	 wall_user_url(friend) %>
				<%= render "layouts/accept_friend", user: friend, url: friendship_url(received_friendship) %>
				<%= button_to "Cancel Friend Request", friendship_url(received_friendship), method: :delete %>
			</li>
			
			<% end %>
		</ul>
	</article>	
</section>
 