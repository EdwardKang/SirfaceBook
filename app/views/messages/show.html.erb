<section class="message">
	<% sender = @message.sender %>
	<% receiver = @message.reveiver %>
	
	<header>
		<%= "#{sender.first_name} #{sender.last_name}" %> &rarr;
		<%= "#{receiver.first_name} #{receiver.last_name}" %> 
	</header>
	
	<article class="message-body">
		<%= @message.text %>
	</article>
</section>