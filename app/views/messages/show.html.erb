<div class="message-group">
	<section class="message">
		<% parent_sender = @message.sender %>
		<% parent_receiver = @message.receiver %>

		<header>
      <% temp_profile_url = parent_sender.profile_photo ? parent_sender.profile_photo.pic : "default_profile_pic.jpeg" %>
      <%= image_tag(temp_profile_url, class: "message-sender-photo") %>
			<%= "#{parent_sender.first_name} #{parent_sender.last_name}" %>
		</header>

		<article class="message-body">
			<%= @message.text %>
		</article>
	</section>

	<% @message.children.each do |message| %>
		<% sender = message.sender %>

		<section class"message">
			<header>
        <% temp_profile_url = sender.profile_photo ? sender.profile_photo.pic : "default_profile_pic.jpeg" %>
        <%= image_tag(temp_profile_url, class: "message-sender-photo") %>
				<%= "#{sender.first_name} #{sender.last_name}" %>
			</header>

			<article class="message-body">
				<%= message.text %>
			</article>
		</section>
	<% end %>
</div>

<% receiver = parent_sender.id == current_user.id ? parent_receiver : parent_sender %>
<%= render "add_message", parent: @message, receiver: receiver %>