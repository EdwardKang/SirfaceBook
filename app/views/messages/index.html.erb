<section class="message-index">
	<ul class="message-list">
		<% @messages.each do |message| %>
			<% sender = message.sender %>
			<% receiver = message.receiver %>

			<li>
        <% temp_profile_url = sender.profile_photo ? sender.profile_photo.pic : "default_profile_pic.jpeg" %>
        <%= image_tag(temp_profile_url, class: "message-sender-photo") %>

				<%= "#{sender.first_name} #{sender.last_name}" %> &rarr;
				<%= "#{receiver.first_name} #{receiver.last_name}" %>
				<%= link_to "Expand Conversation", message_url(message) %>
			</li>
		<% end %>
	</ul>
</section>

<%= render "create_message" %>