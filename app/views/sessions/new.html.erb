<div class="sign-in-page">
  <section class="sign-in">
    <h2>Fakebook</h2>

    <form action="<%= session_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <input type="text" name="user[email]" value="<%= @user.email %>" class="sign-in-input" placeholder="Email">

      <input type="password" name="user[password]" class="sign-in-input" placeholder="Password">

      <p><input type="submit" value="Sign In" class="sign-in-submit"></p>
    </form>
  </section>

  <%= button_to "Sign Up a New Account!", new_user_url, method: :get, class: "sign-up-button" %>
</div>