<section class="photos">
	<%= render "header" %>
	
  <div class="user-photos-wrapper">
	  <h3 class="user-photos-header">Photos</h3>

	  <article>
			<% if @user.photos.empty? %>
				<div class="no-photos">
					You Currently Have No Photos!
				</div>
			<% end %>
			
	    <ul class="user-photos group">
	      <% @user.photos.each do |photo| %>
	      <li>
	        <%= link_to image_tag(photo.pic, class: "photo-index-view"), photo_url(photo) %>
	      </li>
	      <% end %>
	    </ul>
	  </article>
	</div>
</section>