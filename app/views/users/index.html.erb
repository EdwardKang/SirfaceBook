<% @users.each do |user| %>
  <p>
    <form action="<%= friendships_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <%= "#{user.first_name} #{user.last_name}" %>
      <input type="hidden" name="friendship[friendee_id]" value="<%= user.id %>">
      <input type="hidden" name="friendship[friender_id]" value="<%= current_user.id %>">
      <input type="submit" value="Friend">
    </form>
  </p>

<% end %>